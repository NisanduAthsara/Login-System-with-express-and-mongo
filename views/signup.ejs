<!--Include header-->
<%- include('inc/_header.ejs') %>

<div class="container">
    <h1 class="text-center login-h">Sign Up</h1>

    <div class="logout-tag red" id="err-tag1">Invalid Username</div>
    <div class="logout-tag red" id="err-tag2">Username too short</div>
    <div class="logout-tag red" id="err-tag3">Invalid Email</div>
    <div class="logout-tag red" id="err-tag4">Invalid Password</div>
    <div class="logout-tag red" id="err-tag5">Password too short</div>
    <div class="logout-tag red" id="err-tag6">Email is already in use</div>

    <div class="logout-tag" id="suc-tag1">Successfully User Added</div>

    <div class="align-center">
        <form action="/api/signup" method="POST">
            <div class="up_pad main_up">
                <label for="email" class="">Username</label>
                <input type="text" name="username" id="" class="input-field" placeholder="Jhon Doe" required value="<%= uname %>">
            </div>
            <div class="up_pad">
                <label for="password" class="">Email</label>
                <input type="email" name="email" id="" class="input-field" placeholder="example@gmail.com" required value="<%= uemail %>">
            </div>
            <div class="up_pad">
                <label for="password" class="">Password</label>
                <input type="password" name="password" id="" class="input-field" placeholder="****" required value="<%= pwd %>">
            </div>
            <input type="submit" value="Submit" class="submit-btn">
        </form>
    </div>
</div>

<script>
    display2()
</script>

<!--Include footer-->
<%- include('inc/_footer.ejs') %>